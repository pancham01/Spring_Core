<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="http://www.springframework.org/schema/beans  
               http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

	<bean id="address1" class="spring_core.dpInjectPro.Entity.Address">
		<property name="city" value="PAALI"></property>
		<property name="state" value="UP"></property>
	</bean>
	
	<bean id="dbSingleton" 
		class="spring_core.dpInjectPro.Entity.DatabaseSingleton" factory-bean="db"
		 factory-method="getInstance">
	</bean>
	
	<bean id="db" 
		class="spring_core.dpInjectPro.Entity.DatabaseSingleton">
	</bean>
	
	
</beans>
